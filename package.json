{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "le portfolio de lionel ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "nodemon src/App.js",
    "build": "webpack --mode development --watch",
    "build:prod": "webpack --mode production --watch",
    "sass": "sass public/styles/sass/index.scss public/styles/sass/index.css",
    "watch:sass": "sass --watch public/styles/sass/index.scss public/styles/sass/index.css",
    "start": "concurrently \"npm run server\" \"npm run watch:sass\"",
    "start:all": "npm run sass && concurrently \"npm run watch:sass\" \"npm run build\" \"npm run server\" ",
    "dependencies": {
      "express": "^4.18.2",
      "nodemon": "^2.0.22",
      "sass": "^1.49.11",
      "sass-watch": "^0.1.0"
    }
  },
  "devDependencies": {
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "crypto-browserify": "^3.12.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.670.0",
    "dotenv": "^16.4.5",
    "dotenv-webpack": "^8.1.0",
    "express": "^4.19.2",
    "nodemailer": "^6.9.13"
  }
}
